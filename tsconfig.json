{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "lib": ["DOM", "ES2022"],
    "outDir": "./dist/esm/",
    "importHelpers": false,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src"]
}
